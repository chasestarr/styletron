{
  "name": "styletron-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run clean && lerna clean --yes",
    "lint": "eslint --ignore-path .gitignore --ext js,ts,tsx .",
    "pretest": "yarn run lint && yarn run tscheck",
    "test": "lerna run test",
    "build": "yarn tscheck && lerna run build",
    "tscheck": "tsc -b",
    "publish": "lerna publish --npm-client=npm",
    "playground": "lerna run --scope playground dev --stream"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.9.2",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.3.0",
    "eslint-config-cup-recommended": "^2.0.2",
    "eslint-plugin-cup": "^2.0.1",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "flowgen": "^1.11.0",
    "lerna": "^2.11.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.6"
  },
  "license": "MIT"
}
